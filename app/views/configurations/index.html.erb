<div class="flex justify-between items-center mb-6">
  <h2 class="text-2xl font-bold text-gray-900"><i class="fas fa-cogs mr-2"></i> My Configurations</h2>
  <%= link_to new_wizard_configuration_path, class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium transition-colors" do %>
    <i class="fas fa-plus mr-2"></i> New Configuration
  <% end %>
</div>
<div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
  <div class="lg:col-span-3">
    <% if @configurations.any? %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
          <h5 class="text-lg font-semibold text-gray-900">All Configurations</h5>
        </div>
        <div class="p-6">
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Components</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total Price</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Updated</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @configurations.each do |config| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div>
                        <div class="text-sm font-medium text-gray-900">
                          <%= link_to config.name, configuration_path(config), class: "text-red-600 hover:text-red-800" %>
                        </div>
                        <% if config.description.present? %>
                          <div class="text-sm text-gray-500"><%= config.description %></div>
                        <% end %>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                        <%= config.status == 'completed' ? 'bg-green-100 text-green-800' : 
                            config.status == 'in_progress' ? 'bg-yellow-100 text-yellow-800' : 
                            'bg-gray-100 text-gray-800' %>">
                        <%= config.status.titleize %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                        <%= config.component_count %> components
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      $<%= number_with_precision(config.total_price, precision: 2) %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= time_ago_in_words(config.updated_at) %> ago
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <div class="flex space-x-2">
                        <%= link_to "View", configuration_path(config), class: "text-red-600 hover:text-red-800 border border-red-600 hover:bg-red-50 px-3 py-1 rounded text-xs" %>
                        <% if config.draft? || config.in_progress? %>
                          <%= link_to "Continue", wizard_configuration_path(config), class: "text-green-600 hover:text-green-800 border border-green-600 hover:bg-green-50 px-3 py-1 rounded text-xs" %>
                        <% end %>
                        <%= link_to "Export", export_configuration_path(config), class: "text-blue-600 hover:text-blue-800 border border-blue-600 hover:bg-blue-50 px-3 py-1 rounded text-xs" %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="text-center py-12">
          <i class="fas fa-inbox text-6xl text-gray-400 mb-4"></i>
          <h5 class="text-xl font-medium text-gray-500 mb-2">No configurations yet</h5>
          <p class="text-gray-500 mb-6">Start by creating your first configuration</p>
          <%= link_to "Create Configuration", new_wizard_configuration_path, class: "bg-red-600 hover:bg-red-700 text-white px-6 py-3 rounded-lg font-medium transition-colors" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="lg:col-span-1">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h5 class="text-lg font-semibold text-gray-900">Quick Stats</h5>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-2 gap-4 text-center">
          <div>
            <h4 class="text-2xl font-bold text-red-600"><%= @active_configurations.count %></h4>
            <p class="text-sm text-gray-500">Active</p>
          </div>
          <div>
            <h4 class="text-2xl font-bold text-green-600"><%= @completed_configurations.count %></h4>
            <p class="text-sm text-gray-500">Completed</p>
          </div>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200">
        <h5 class="text-lg font-semibold text-gray-900">Recent Activity</h5>
      </div>
      <div class="p-6">
        <% if @configurations.any? %>
          <div class="space-y-4">
            <% @configurations.limit(5).each do |config| %>
              <div class="flex justify-between items-start">
                <div class="flex-1">
                  <p class="text-sm font-medium text-gray-900"><%= config.name %></p>
                  <p class="text-xs text-gray-500"><%= config.status.titleize %></p>
                </div>
                <p class="text-xs text-gray-500"><%= time_ago_in_words(config.updated_at) %> ago</p>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-center text-sm">No recent activity</p>
        <% end %>
      </div>
    </div>
  </div>
</div>