<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Header Section -->
  <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg shadow-xl mb-8">
    <div class="px-6 py-8 text-center">
      <h1 class="text-4xl font-bold text-white mb-4">üì¶ Product Catalog</h1>
      <p class="text-xl text-blue-100 mb-6">Browse our comprehensive collection of conveyor systems and components</p>
      <div class="flex justify-center space-x-8">
        <div class="bg-white bg-opacity-20 rounded-lg px-4 py-2">
          <span class="text-white font-semibold"><%= @total_count %></span>
          <span class="text-blue-100 ml-1">Products</span>
        </div>
        <div class="bg-white bg-opacity-20 rounded-lg px-4 py-2">
          <span class="text-white font-semibold"><%= @categories.count %></span>
          <span class="text-blue-100 ml-1">Categories</span>
        </div>
        <div class="bg-white bg-opacity-20 rounded-lg px-4 py-2">
          <span class="text-white font-semibold"><%= @types.count %></span>
          <span class="text-blue-100 ml-1">Types</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Search and Filter Section -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <%= form_with url: search_products_path, method: :get, local: true, class: "space-y-4" do |form| %>
      <div class="grid-12">
        <div class="lg:col-span-2">
          <%= form.text_field :q, 
              value: params[:q], 
              placeholder: "Search products...", 
              class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        
        <div>
          <%= form.select :category, 
              options_for_select([['All Categories', '']] + @categories.map { |cat| [cat, cat] }, params[:category]), 
              {}, 
              class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        
        <div>
          <%= form.select :type, 
              options_for_select([['All Types', '']] + @types.map { |type| [type.humanize, type] }, params[:type]), 
              {}, 
              class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        
        <div>
          <%= form.select :price_range, 
              options_for_select([
                ['All Prices', ''],
                ['Under $100', '0-100'],
                ['$100 - $500', '100-500'],
                ['$500 - $1000', '500-1000'],
                ['Over $1000', '1000+']
              ], params[:price_range]), 
              {}, 
              class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        
        <div>
          <%= form.select :sort, 
              options_for_select([
                ['Name', 'name'],
                ['Price', 'price'],
                ['Category', 'category'],
                ['Type', 'type']
              ], params[:sort]), 
              {}, 
              class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        
        <div>
          <%= form.select :order, 
              options_for_select([
                ['Ascending', 'asc'],
                ['Descending', 'desc']
              ], params[:order] || 'asc'), 
              {}, 
              class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        
        <div class="flex space-x-2">
          <%= form.submit "Search", class: "flex-1 bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors" %>
          <%= link_to "Clear", products_path, class: "bg-gray-500 text-white px-4 py-2 rounded-md hover:bg-gray-600 focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Quick Filter Links -->
  <div class="mb-8">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Filters:</h3>
    <div class="flex flex-wrap gap-2">
      <% @categories.each do |category| %>
        <%= link_to category, by_category_products_path(category: category.downcase), 
            class: "px-4 py-2 bg-gray-100 text-gray-700 rounded-full hover:bg-blue-100 hover:text-blue-700 transition-colors #{'bg-blue-100 text-blue-700' if params[:category] == category.downcase}" %>
      <% end %>
    </div>
  </div>

  <!-- Products Grid -->
  <div class="grid-12">
    <% if @products.any? %>
      <% @products.each do |product| %>
        <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden">
          <div class="relative h-48 bg-gray-100 flex items-center justify-center">
            <% if product[:image_url].present? %>
              <%= image_tag product[:image_url], alt: product[:name], class: "w-full h-full object-cover" %>
            <% else %>
              <div class="text-gray-400 text-4xl">üì¶</div>
            <% end %>
            <div class="absolute top-2 right-2">
              <span class="px-2 py-1 text-xs font-semibold rounded-full <%= product[:source] == 'supabase' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                <%= product[:source].titleize %>
              </span>
            </div>
          </div>
          
          <div class="p-4">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
              <%= link_to product[:name], product_path(product[:id]), class: "hover:text-blue-600 transition-colors" %>
            </h3>
            
            <div class="flex space-x-2 mb-3">
              <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs font-medium rounded-full">
                <%= product[:category] %>
              </span>
              <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">
                <%= product[:type].humanize %>
              </span>
            </div>
            
            <p class="text-gray-600 text-sm mb-4 line-clamp-2">
              <%= truncate(product[:description], length: 120) %>
            </p>
            
            <div class="flex justify-between items-center">
              <div class="text-lg font-bold text-gray-900">
                <% if product[:price] %>
                  $<%= number_with_precision(product[:price], precision: 2) %>
                <% else %>
                  <span class="text-gray-400">Price N/A</span>
                <% end %>
              </div>
              <div class="text-sm text-gray-500">
                <%= product[:brand] %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="col-span-full text-center py-12">
        <div class="text-gray-400 text-6xl mb-4">üîç</div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">No products found</h3>
        <p class="text-gray-600 mb-4">Try adjusting your search criteria or browse all products</p>
        <%= link_to "View All Products", products_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors" %>
      </div>
    <% end %>
  </div>

  <!-- Results Summary -->
  <% if @products.any? %>
    <div class="mt-8 text-center text-gray-600">
      <p>Showing <strong><%= @products.count %></strong> of <strong><%= @total_count %></strong> products</p>
    </div>
  <% end %>
</div> 