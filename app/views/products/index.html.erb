<div class="products-container">
  <!-- Header Section -->
  <div class="products-header">
    <div class="header-content">
      <h1>üì¶ Product Catalog</h1>
      <p class="subtitle">Browse our comprehensive collection of conveyor systems and components</p>
      <div class="stats">
        <span class="stat-item">
          <strong><%= @total_count %></strong> Products
        </span>
        <span class="stat-item">
          <strong><%= @categories.count %></strong> Categories
        </span>
        <span class="stat-item">
          <strong><%= @types.count %></strong> Types
        </span>
      </div>
    </div>
  </div>

  <!-- Search and Filter Section -->
  <div class="search-filter-section">
    <div class="search-box">
      <%= form_with url: search_products_path, method: :get, local: true, class: "search-form" do |form| %>
        <div class="search-inputs">
          <div class="search-field">
            <%= form.text_field :q, 
                value: params[:q], 
                placeholder: "Search products...", 
                class: "search-input" %>
          </div>
          
          <div class="filter-field">
            <%= form.select :category, 
                options_for_select([['All Categories'] + @categories], params[:category]), 
                {}, 
                class: "filter-select" %>
          </div>
          
          <div class="filter-field">
            <%= form.select :type, 
                options_for_select([['All Types'] + @types], params[:type]), 
                {}, 
                class: "filter-select" %>
          </div>
          
          <div class="sort-field">
            <%= form.select :sort, 
                options_for_select([
                  ['Name', 'name'],
                  ['Price', 'price'],
                  ['Category', 'category'],
                  ['Type', 'type']
                ], params[:sort]), 
                {}, 
                class: "sort-select" %>
          </div>
          
          <div class="order-field">
            <%= form.select :order, 
                options_for_select([
                  ['Ascending', 'asc'],
                  ['Descending', 'desc']
                ], params[:order] || 'asc'), 
                {}, 
                class: "order-select" %>
          </div>
          
          <%= form.submit "Search", class: "search-btn" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Quick Filter Links -->
  <div class="quick-filters">
    <h3>Quick Filters:</h3>
    <div class="filter-links">
      <% @categories.each do |category| %>
        <%= link_to category, by_category_products_path(category: category.downcase), 
            class: "filter-link #{'active' if params[:category] == category.downcase}" %>
      <% end %>
    </div>
  </div>

  <!-- Products Grid -->
  <div class="products-grid">
    <% if @products.any? %>
      <% @products.each do |product| %>
        <div class="product-card">
          <div class="product-image">
            <% if product[:image_url].present? %>
              <%= image_tag product[:image_url], alt: product[:name], class: "product-img" %>
            <% else %>
              <div class="product-placeholder">
                <span class="placeholder-icon">üì¶</span>
              </div>
            <% end %>
            <div class="product-badge <%= product[:source] %>">
              <%= product[:source].titleize %>
            </div>
          </div>
          
          <div class="product-content">
            <div class="product-header">
              <h3 class="product-name">
                <%= link_to product[:name], product_path(product[:id]), class: "product-link" %>
              </h3>
              <div class="product-category">
                <span class="category-tag"><%= product[:category] %></span>
                <span class="type-tag"><%= product[:type].humanize %></span>
              </div>
            </div>
            
            <p class="product-description">
              <%= truncate(product[:description], length: 120) %>
            </p>
            
            <div class="product-specs">
              <% if product[:specifications].present? %>
                <div class="specs-preview">
                  <% product[:specifications].first(2).each do |spec| %>
                    <span class="spec-item">‚Ä¢ <%= spec %></span>
                  <% end %>
                  <% if product[:specifications].length > 2 %>
                    <span class="spec-more">+<%= product[:specifications].length - 2 %> more</span>
                  <% end %>
                </div>
              <% end %>
            </div>
            
            <div class="product-footer">
              <div class="product-price">
                <span class="price-amount">$<%= number_with_precision(product[:price], precision: 2) %></span>
              </div>
              <div class="product-brand">
                <span class="brand-name"><%= product[:brand] %></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="no-products">
        <div class="no-products-content">
          <span class="no-products-icon">üîç</span>
          <h3>No products found</h3>
          <p>Try adjusting your search criteria or browse all products</p>
          <%= link_to "View All Products", products_path, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Results Summary -->
  <% if @products.any? %>
    <div class="results-summary">
      <p>Showing <strong><%= @products.count %></strong> of <strong><%= @total_count %></strong> products</p>
    </div>
  <% end %>
</div>

