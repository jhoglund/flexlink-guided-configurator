<% content_for :breadcrumbs do %>
  [
    { text: "Home", url: root_path },
    { text: "Products", url: products_path },
    { text: @product[:name] }
  ]
<% end %>

<section class="product-detail-container">

  <!-- Product Header -->
  <header class="product-header">
    <div class="product-basic-info">
      <section class="product-image-section">
        <% if @product[:image_url].present? %>
          <%= image_tag @product[:image_url], alt: @product[:name], class: "product-main-image" %>
        <% else %>
          <div class="product-image-placeholder">
            <span class="placeholder-icon">üì¶</span>
          </div>
        <% end %>
        <div class="product-badge <%= @product[:source] %>">
          <%= @product[:source].titleize %>
        </div>
      </section>
      
      <div class="product-info">
        <div class="product-category-badges">
          <span class="category-badge"><%= @product[:category] %></span>
          <span class="type-badge"><%= @product[:type].humanize %></span>
        </div>
        
        <h1 class="product-title"><%= @product[:name] %></h1>
        
        <p class="product-description">
          <%= @product[:description] %>
        </p>
        
        <div class="product-meta">
          <div class="meta-item">
            <span class="meta-label">Brand:</span>
            <span class="meta-value"><%= @product[:brand] %></span>
          </div>
          <div class="meta-item">
            <span class="meta-label">Source:</span>
            <span class="meta-value"><%= @product[:source].titleize %></span>
          </div>
        </div>
        
        <section class="product-price-section">
          <div class="price-display">
            <span class="price-currency">$</span>
            <span class="price-amount"><%= number_with_precision(@product[:price], precision: 2) %></span>
          </div>
          <div class="price-note">*Prices may vary based on configuration</div>
        </section>
      </div>
    </div>
  </header>

  <!-- Product Details Tabs -->
  <div class="product-tabs">
    <nav class="tab-navigation">
      <button class="tab-button active" data-tab="specifications">Specifications</button>
      <button class="tab-button" data-tab="details">Details</button>
      <button class="tab-button" data-tab="related">Related Products</button>
    </nav>
    
    <div class="tab-content">
      <!-- Specifications Tab -->
      <div class="tab-panel active" id="specifications">
        <div class="specifications-grid">
          <% if @product[:specifications].present? %>
            <% @product[:specifications].each do |spec| %>
              <div class="spec-item">
                <div class="spec-icon">‚öôÔ∏è</div>
                <div class="spec-content">
                  <span class="spec-text"><%= spec %></span>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="no-specs">
              <span class="no-specs-icon">üìã</span>
              <p>No specifications available for this product.</p>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Details Tab -->
      <div class="tab-panel" id="details">
        <div class="details-grid">
          <section class="detail-section">
            <h3>Product Information</h3>
            <div class="detail-list">
              <div class="detail-item">
                <span class="detail-label">Product ID:</span>
                <span class="detail-value"><%= @product[:id] %></span>
              </div>
              <div class="detail-item">
                <span class="detail-label">Category:</span>
                <span class="detail-value"><%= @product[:category] %></span>
              </div>
              <div class="detail-item">
                <span class="detail-label">Type:</span>
                <span class="detail-value"><%= @product[:type].humanize %></span>
              </div>
              <div class="detail-item">
                <span class="detail-label">Brand:</span>
                <span class="detail-value"><%= @product[:brand] %></span>
              </div>
            </div>
          </section>
          
          <section class="detail-section">
            <h3>Pricing Information</h3>
            <div class="detail-list">
              <div class="detail-item">
                <span class="detail-label">Base Price:</span>
                <span class="detail-value">$<%= number_with_precision(@product[:price], precision: 2) %></span>
              </div>
              <div class="detail-item">
                <span class="detail-label">Currency:</span>
                <span class="detail-value">USD</span>
              </div>
            </div>
          </section>
        </div>
      </div>
      
      <!-- Related Products Tab -->
      <div class="tab-panel" id="related">
        <% if @related_products.any? %>
          <div class="related-products-grid">
            <% @related_products.each do |related_product| %>
              <div class="related-product-card">
                <div class="related-product-image">
                  <% if related_product[:image_url].present? %>
                    <%= image_tag related_product[:image_url], alt: related_product[:name], class: "related-product-img" %>
                  <% else %>
                    <div class="related-product-placeholder">
                      <span class="placeholder-icon">üì¶</span>
                    </div>
                  <% end %>
                </div>
                
                <div class="related-product-content">
                  <h4 class="related-product-name">
                    <%= link_to related_product[:name], product_path(related_product[:id]), class: "related-product-link" %>
                  </h4>
                  
                  <p class="related-product-description">
                    <%= truncate(related_product[:description], length: 80) %>
                  </p>
                  
                  <div class="related-product-meta">
                    <span class="related-category"><%= related_product[:category] %></span>
                    <span class="related-price">$<%= number_with_precision(related_product[:price], precision: 2) %></span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="no-related">
            <span class="no-related-icon">üîç</span>
            <p>No related products found.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="product-actions">
    <div class="action-buttons">
      <%= link_to "Back to Products", products_path, class: "btn btn-secondary" %>
      <%= link_to "Add to Configuration", "#", class: "btn btn-primary" %>
      <%= link_to "Request Quote", "#", class: "btn btn-outline" %>
    </div>
  </div>
</section>

