<div class="grid-container">
  <h2><strong>24‑column</strong> grid test</h2>

  <h3>Columns: 24 × 1/24</h3>
  <div class="grid-24 demo-grid">
    <% 24.times do |i| %>
      <div class="demo-box span-24-1"><%= i + 1 %></div>
    <% end %>
  </div>

  <h3>Row: 8 × 3/24</h3>
  <div class="grid-24 demo-grid">
    <% 8.times do |i| %>
      <div class="demo-box span-24-3"><%= i + 1 %></div>
    <% end %>
  </div>

  <h3>Row: 4 × 6/24</h3>
  <div class="grid-24 demo-grid">
    <% 4.times do |i| %>
      <div class="demo-box span-24-6"><%= i + 1 %></div>
    <% end %>
  </div>

  <h3>Row: 2 × 12/24</h3>
  <div class="grid-24 demo-grid">
    <% 2.times do |i| %>
      <div class="demo-box span-24-12"><%= i + 1 %></div>
    <% end %>
  </div>
</div>


