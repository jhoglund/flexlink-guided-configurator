<section class="section-full-width grid-test">
  <div class="container">
    <h2 class="section-title"><strong>24‑column</strong> grid test</h2>

    <h3 class="mb-4">Row: 8 × 3/24</h3>
    <div class="grid-24 demo-grid">
      <% 8.times do |i| %>
        <div class="demo-box span-24-3"><%= i + 1 %></div>
      <% end %>
    </div>

    <h3 class="mb-4">Row: 4 × 6/24</h3>
    <div class="grid-24 demo-grid">
      <% 4.times do |i| %>
        <div class="demo-box span-24-6"><%= i + 1 %></div>
      <% end %>
    </div>

    <h3 class="mb-4">Row: 2 × 12/24</h3>
    <div class="grid-24 demo-grid">
      <% 2.times do |i| %>
        <div class="demo-box span-24-12"><%= i + 1 %></div>
      <% end %>
    </div>
  </div>
</section>


