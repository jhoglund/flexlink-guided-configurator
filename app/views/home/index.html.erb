<!-- Hero Section -->
<div class="bg-gradient-to-br from-flexlink-red to-flexlink-red-dark text-white py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-6">Welcome to FlexLink Online Store</h1>
      <p class="text-xl md:text-2xl mb-8 opacity-90">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua</p>
      <button class="btn-flexlink-primary text-lg px-8 py-4">
        Start shopping
      </button>
    </div>
  </div>
</div>

<!-- Category Selection Section -->
<div class="py-16 bg-white">
  <div class="max-w-[1400px] mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Start here and choose your industry</h2>
    </div>
    
    <!-- Industry Categories Grid -->
    <div id="industry-grid" class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-8 gap-6 mb-12">
      <% @categories.each do |category| %>
        <%= render 'category_card', category: category %>
      <% end %>
      <!-- Build Your Own System Section -->
      <div class="col-span-4 w-full h-32 flex flex-col bg-flexlink-red rounded-lg p-8 text-white">

        <div class="flex flex-col lg:flex-row items-center justify-between">
          <div class="mb-6 lg:mb-0 border-cyan-800 border-2">
            <h3 class="text-2xl font-bold mb-2">Build your own system</h3>
            <p class="text-lg opacity-90">We can guide to enhance production flows, maximize sellable throughput and minimize the TCO.</p>
          </div>
          <div class="flex items-center space-x-4">
            <span class="text-sm">Do you need help?</span>
            <button class="bg-white text-flexlink-red px-6 py-2 rounded-lg font-medium hover:bg-gray-100 transition-colors duration-200">
              System Building
            </button>
          </div>
        </div>
      </div>
    </div>
    
    
  </div>
</div>

<!-- Product Search Section -->
<div class="py-16 bg-gray-50">
  <div class="max-w-[1400px] mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Search for a product</h2>
    </div>
    
    <div class="bg-white rounded-lg p-8 shadow-sm border border-gray-200">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="md:col-span-2">
          <input type="text" placeholder="What are you looking for?" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-flexlink-red focus:border-transparent">
        </div>
        <div>
          <select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-flexlink-red focus:border-transparent">
            <option>Filter</option>
            <option>Automotive</option>
            <option>E-Commerce</option>
            <option>Food & Beverage</option>
          </select>
        </div>
        <div>
          <button class="w-full bg-flexlink-red text-white px-6 py-3 rounded-lg font-medium hover:bg-flexlink-red-dark transition-colors duration-200">
            Search
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Font Test Section (Remove after testing) -->
<div class="py-8 bg-gray-100 border-b border-gray-200">
  <div class="max-w-[1400px] mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Font Test</h2>
      <p class="text-sm text-gray-600 mb-4">This section tests the font implementation. Remove after confirming fonts work correctly.</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-white p-6 rounded-lg border border-gray-200">
        <h3 class="text-lg font-bold mb-4">Default Font Stack</h3>
        <div class="space-y-2">
          <p class="font-normal">Regular (400): The quick brown fox jumps over the lazy dog</p>
          <p class="font-medium">Medium (500): The quick brown fox jumps over the lazy dog</p>
          <p class="font-bold">Bold (700): The quick brown fox jumps over the lazy dog</p>
        </div>
      </div>
      
      <div class="bg-white p-6 rounded-lg border border-gray-200">
        <h3 class="text-lg font-bold mb-4">Forced Inter Font</h3>
        <div class="space-y-2 font-inter">
          <p class="font-normal">Regular (400): The quick brown fox jumps over the lazy dog</p>
          <p class="font-medium">Medium (500): The quick brown fox jumps over the lazy dog</p>
          <p class="font-bold">Bold (700): The quick brown fox jumps over the lazy dog</p>
        </div>
