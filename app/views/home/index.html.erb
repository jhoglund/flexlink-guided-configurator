<!-- Hero Section -->
<section class="section-full-width hero">
  <div class="grid-container">
    <div class="grid">
      <div class="hero-content col-span-full">
        <h1>Welcome to FlexLink Online Store</h1>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua</p>
        <button class="btn btn-primary">Start shopping</button>
      </div>
    </div>
  </div>
</section>
<!-- Category Selection Section -->
<section class="section-full-width bg-light-gray">
  <div class="grid-container">
    <div class="grid">
      <!-- Industry Categories Grid -->
      <% @categories.each do |category| %>
        <div class="industry-card col-span-3">
          <%= industry_card_icon(category[:name].downcase, alt: "#{category[:name]} icon") %>
          <%= industry_card_label(category[:name].downcase, alt: category[:name]) %>
        </div>
      <% end %>
      <!-- Build Your Own System Section -->
      <div class="build-section col-span-3 sm:col-span-6 md:col-span-12">
        <div class="build-3d-icon">
          <svg width="211" height="209" viewBox="0 0 211 209" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M105.397 35.9991L28.5444 74.4255L105.397 112.852L182.294 74.4255L105.397 35.9991Z" stroke-width="5" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M105.397 112.852V205.101L182.294 166.675V74.4254L105.397 112.852Z" stroke-width="5" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M105.397 112.852V205.101L28.5444 166.675V74.4254L105.397 112.852Z" stroke-width="5" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M105.397 74.4255V3.30811" stroke-width="5" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M137.559 136.852L207.573 179.249" stroke-width="5" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M75.8825 134.778L3.30927 179.248" stroke-width="5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <div class="build-content">
          <h3>Build your own <strong>system</strong></h3>
          <p>We can guide to enhance production flows, maximize sellable throughput and minimize the TCO.</p>
        </div>
        <div class="build-actions">
          <button class="btn btn-primary">
            System Building
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
