<!-- Category Selection Section -->
<section class="section-full-width bg-light-gray">
  <div class="container">
    <div class="mb-12">
      <h2 class="section-title">Start here and choose your industry</h2>
    </div>
    
    <!-- Industry Categories Grid -->
    <div id="industry-grid" class="industry-grid">
      <% @categories.each do |category| %>
        <div class="category-card">
          <%= image_tag "icons/categories/#{category[:icon]}", alt: category[:name] %>
        </div>
      <% end %>
      <!-- Build Your Own System Section -->
      <section class="build-section">
        <div class="build-content">
          <h3>Build your own system</h3>
          <p>We can guide to enhance production flows, maximize sellable throughput and minimize the TCO.</p>
        </div>
        <div class="build-actions">
          <span>Do you need help?</span>
          <button class="btn btn-secondary">
            System Building
          </button>
        </div>
      </section>
    </div>

    <div class="mb-8">
      <h2 class="section-title">Search for a product</h2>
    </div>
    
   <!-- Product Search Section --> 
    <div class="search-container">
      <div class="search-form">
        <div>
          <input type="text" placeholder="What are you looking for?" class="form-input">
        </div>
        <div>
          <select class="form-select">
            <option>Filter</option>
            <option>Automotive</option>
            <option>E-Commerce</option>
            <option>Food & Beverage</option>
          </select>
        </div>
        <div>
          <button class="btn btn-primary">
            Search
          </button>
        </div>
      </div>
    </div>
  </div>
</section>


