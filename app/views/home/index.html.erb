<!-- Hero Debug Section -->
<section class="section-full-width hero">
  <!-- Content area with background swosh -->
  <div class="hero-container">
    <div class="hero-background"></div>
    <div class="hero-content">
      <h1>Welcome to FlexLink Online Store</h1>
      <p class="my-6">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua</p>
    </div>
  </div>
</section>
<!-- Category Selection Section -->
<section class="section-full-width bg-light-gray py-16 mt-6">
  <div class="grid-container">
    <h3 class="mb-6">Start here and <span class="text-flexlink-medium-gray">choose your industry</span></h3>
    <div class="grid">
      <!-- Industry Categories Grid -->
      <% @categories.each do |category| %>
        <div class="industry-card col-span-3">
          <%= industry_card_icon(category[:name].downcase, alt: "#{category[:name]} icon") %>
          <%= industry_card_label(category[:name].downcase, alt: category[:name]) %>
        </div>
      <% end %>
      <!-- Build Your Own System Section -->
      <div class="build-section col-span-3 sm:col-span-6 md:col-span-12">
        <div class="build-3d-icon">
          <%= image_tag "icons/3d-icon.svg", alt: "Build your own system", class: "build-3d-icon-" %>
        </div>
        <div class="build-content">
          <h3>Build your own <strong>system</strong></h3>
          <p>We can guide to enhance production flows, maximize sellable throughput and minimize the TCO.</p>
        </div>
        <div class="build-actions">
          <button class="btn btn-primary">
            System Building
          </button>
        </div>
      </div>
    </div>
  </div>
  <div class="grid-container">
    <h3 class="mt-16 mb-6">Search for <span class="text-flexlink-medium-gray">a product</span></h3>
    <div class="search-form grid">
      <!-- Product Search Section -->
      <div style="position: relative;" class="col-span-4 lg:col-span-9">
        <%= icon_tag "search", alt: "Search", class: "search-icon" %>
        <input type="text" placeholder="What are you looking for?" class="form-input">
      </div>
      <div class="col-span-3 lg:col-span-5">
        <select class="form-select w-full">
          <option>Filter</option>
          <option>Automotive</option>
          <option>E-Commerce</option>
          <option>Food & Beverage</option>
        </select>
      </div>
      <div class="col-span-2 lg:col-span-4">
        <input type="text" placeholder="Product no" class="form-input product-no-input w-full">
      </div>
      <div class="col-span-3 lg:col-span-6">
        <button class="btn btn-primary w-full">
          Search
        </button>
      </div>
    </div>
  </div>
</div>
</div>
</section>
