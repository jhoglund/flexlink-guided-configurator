<!-- Font Test Section (Remove after testing) -->
<section class="section-full-width bg-light-gray">
  <div class="container">
    <div class="mb-6">
      <h2 class="section-title">Font Test</h2>
      <p style="font-size: 0.875rem; color: var(--gray-600); margin-bottom: 1rem;">This section tests the font implementation. Remove after confirming fonts work correctly.</p>
    </div>
    
    <div class="grid grid-1 grid-md-3">
      <div class="card">
        <h3 style="font-size: 1.125rem; font-weight: bold; margin-bottom: 1rem;">Default Font Stack</h3>
        <div style="display: flex; flex-direction: column; gap: 0.5rem;">
          <p style="font-weight: 400;">Regular (400): The quick brown fox jumps over the lazy dog</p>
          <p style="font-weight: 500;">Medium (500): The quick brown fox jumps over the lazy dog</p>
          <p style="font-weight: 700;">Bold (700): The quick brown fox jumps over the lazy dog</p>
        </div>
      </div>
      
      <div class="card">
        <h3 style="font-size: 1.125rem; font-weight: bold; margin-bottom: 1rem;">Forced Inter Font</h3>
        <div style="display: flex; flex-direction: column; gap: 0.5rem; font-family: Inter, sans-serif;">
          <p style="font-weight: 400;">Regular (400): The quick brown fox jumps over the lazy dog</p>
          <p style="font-weight: 500;">Medium (500): The quick brown fox jumps over the lazy dog</p>
          <p style="font-weight: 700;">Bold (700): The quick brown fox jumps over the lazy dog</p>
        </div>
        <hr style="margin: 1rem 0;">
        <h4 style="font-weight: bold; margin-bottom: 0.5rem;">Direct Inter Test:</h4>
        <p style="font-family: Inter, sans-serif; font-size: 24px;">This should be Inter Regular</p>
        <p style="font-family: Inter, sans-serif; font-size: 24px; font-weight: 500;">This should be Inter Medium</p>
        <p style="font-family: Inter, sans-serif; font-size: 24px; font-weight: 700;">This should be Inter Bold</p>
        <hr style="margin: 1rem 0;">
        <h4 style="font-weight: bold; margin-bottom: 0.5rem;">Direct @font-face Test:</h4>
        <p style="font-family: Inter, sans-serif; font-size: 24px;">This should be Inter Regular (direct)</p>
        <p style="font-family: Inter, sans-serif; font-size: 24px; font-weight: 500;">This should be Inter Medium (direct)</p>
        <p style="font-family: Inter, sans-serif; font-size: 24px; font-weight: 700;">This should be Inter Bold (direct)</p>
      </div>
      
      <div class="card">
        <h3 style="font-size: 1.125rem; font-weight: bold; margin-bottom: 1rem;">Font Styles</h3>
        <div style="display: flex; flex-direction: column; gap: 0.5rem;">
          <p style="font-weight: 400;">Normal: The quick brown fox jumps over the lazy dog</p>
          <p style="font-weight: 400; font-style: italic;">Italic: The quick brown fox jumps over the lazy dog</p>
          <p style="font-weight: 700;">Bold: The quick brown fox jumps over the lazy dog</p>
          <p style="font-weight: 700; font-style: italic;">Bold Italic: The quick brown fox jumps over the lazy dog</p>
        </div>
      </div>
    </div>
  </div>
</section>

