<section class="max-w-6xl mx-auto p-5">
  <%= render 'wizard/steps/wizard_header' %>

  <div class="wizard-content">
    <%= form_with url: wizard_update_step_path(3), method: :patch, local: true, class: "wizard-form" do |form| %>
      <div class="mb-10">
        <h2 class="text-2xl font-bold text-gray-900 text-center mb-3">Select Component Types</h2>
        <p class="text-gray-600 text-center text-lg mb-8">Choose the types of components you need for your conveyor system configuration.</p>
        
        <div class="grid-12 gap-6 mb-10">
          <% @component_types.each do |component_type| %>
            <div class="component-type-card relative">
              <input type="checkbox" 
                     name="wizard_step[component_types][]" 
                     id="component_type_<%= component_type.parameterize %>"
                     value="<%= component_type %>"
                     class="hidden"
                     <%= 'checked' if @step_data&.dig('component_types')&.include?(component_type) %>>
              <label for="component_type_<%= component_type.parameterize %>" 
                     class="block cursor-pointer border-2 border-gray-200 rounded-xl p-6 transition-all duration-300 bg-white hover:border-red-300 hover:shadow-md h-full">
                <div class="card-content text-center">
                  <div class="component-icon text-4xl mb-4">
                    <%= get_component_type_icon(component_type) %>
                  </div>
                  <h4 class="text-lg font-semibold text-gray-900 mb-3"><%= component_type_display_name(component_type) %></h4>
                  <p class="description text-gray-600 mb-4 leading-relaxed">
                    <%= get_component_type_description(component_type) %>
                  </p>
                  <div class="features space-y-2">
                    <span class="feature text-green-600 text-sm font-medium block">✓ High quality</span>
                    <span class="feature text-green-600 text-sm font-medium block">✓ Reliable performance</span>
                    <span class="feature text-green-600 text-sm font-medium block">✓ Easy installation</span>
                  </div>
                </div>
              </label>
            </div>
          <% end %>
        </div>
      </div>

      <div class="text-center pt-8 border-t border-gray-200">
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <%= link_to "Back", wizard_step_path(2), class: "px-6 py-3 bg-gray-200 text-gray-700 rounded-lg font-medium hover:bg-gray-300 transition-colors" %>
          <%= form.submit "Continue to Step 4", class: "px-6 py-3 bg-red-600 text-white rounded-lg font-medium hover:bg-red-700 hover:transform hover:-translate-y-0.5 transition-all duration-200 shadow-md" %>
        </div>
      </div>
    <% end %>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Add smooth transitions for card selection
  const cards = document.querySelectorAll('.component-type-card label');
  const inputs = document.querySelectorAll('.component-type-card input[type="checkbox"]');
  
  inputs.forEach(input => {
    input.addEventListener('change', function() {
      const label = this.nextElementSibling;
      
      if (this.checked) {
        label.classList.remove('border-gray-200');
        label.classList.add('border-red-500', 'shadow-lg', 'transform', '-translate-y-1');
      } else {
        label.classList.remove('border-red-500', 'shadow-lg', 'transform', '-translate-y-1');
        label.classList.add('border-gray-200');
      }
    });
  });
  
  // Initialize active state for pre-selected cards
  inputs.forEach(input => {
    if (input.checked) {
      const label = input.nextElementSibling;
      label.classList.remove('border-gray-200');
      label.classList.add('border-red-500', 'shadow-lg', 'transform', '-translate-y-1');
    }
  });
});
</script> 