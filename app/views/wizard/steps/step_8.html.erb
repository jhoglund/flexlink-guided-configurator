<section class="wizard-container">
  <%= render 'wizard/steps/wizard_header' %>
  <div class="wizard-content">
    <%= form_with url: wizard_update_step_path(8), method: :patch, local: true, class: "wizard-form" do |form| %>
      <section class="review-section">
        <h2>Review Your Configuration</h2>
        <p class="step-description">Please review your configuration details and provide a name for your project.</p>
        <div class="configuration-summary">
          <div class="summary-card">
            <h3>System Information</h3>
            <div class="summary-details">
              <div class="detail-item">
                <span class="label">System Type:</span>
                <span class="value"><%= @configuration_summary[:system_type]&.humanize %></span>
              </div>
              <div class="detail-item">
                <span class="label">System Specifications:</span>
                <span class="value"><%= @configuration_summary[:system_specifications] %></span>
              </div>
              <div class="detail-item">
                <span class="label">Component Types:</span>
                <span class="value"><%= @configuration_summary[:component_types]&.join(', ') %></span>
              </div>
            </div>
          </div>
          <div class="summary-card">
            <h3>Component Selection</h3>
            <div class="component-list">
              <% if @configuration_summary[:component_selections]&.any? %>
                <% @configuration_summary[:component_selections].each do |selection| %>
                  <div class="component-item">
                    <div class="component-info">
                      <h4><%= selection['component_name'] %></h4>
                      <p class="component-type"><%= selection['component_type']&.humanize %></p>
                    </div>
                    <div class="component-details">
                      <span class="quantity">Qty: <%= selection['quantity'] %></span>
                      <span class="price">$<%= number_with_delimiter(selection['price']) %> each</span>
                      <span class="total">$<%= number_with_delimiter(selection['price'] * selection['quantity']) %></span>
                    </div>
                  </div>
                <% end %>
              <% else %>
                <p class="no-components">No components selected yet.</p>
              <% end %>
            </div>
          </div>
          <div class="summary-card total-card">
            <h3>Total Summary</h3>
            <div class="total-details">
              <div class="total-item">
                <span class="label">Total Components:</span>
                <span class="value"><%= @configuration_summary[:component_selections]&.sum { |s| s['quantity'] } || 0 %></span>
              </div>
              <div class="total-item">
                <span class="label">Total Value:</span>
                <span class="value total-price">$<%= number_with_delimiter(@configuration_summary[:total_price] || 0) %></span>
              </div>
            </div>
          </div>
        </div>
        <section class="configuration-name-section">
          <h3>Name Your Configuration</h3>
          <p class="name-description">Give your configuration a memorable name for easy reference.</p>
          <div class="name-input-group">
            <label for="configuration_name">Configuration Name:</label>
            <input type="text" 
                   id="configuration_name"
                   name="wizard_step[configuration_name]" 
                   value="<%= @step_data&.dig('configuration_name') || 'FlexLink Configuration' %>"
                   placeholder="Enter configuration name..."
                   class="name-input"
                   required>
          </div>
          <div class="name-suggestions">
            <p class="suggestions-label">Suggested names:</p>
            <div class="suggestion-buttons">
              <button type="button" class="suggestion-btn" data-name="Production Line A">Production Line A</button>
              <button type="button" class="suggestion-btn" data-name="Assembly Conveyor">Assembly Conveyor</button>
              <button type="button" class="suggestion-btn" data-name="Packaging System">Packaging System</button>
              <button type="button" class="suggestion-btn" data-name="Custom Configuration">Custom Configuration</button>
            </div>
          </div>
        </section>
        <div class="final-actions">
          <div class="action-buttons">
            <%= link_to "Back to Step 7", wizard_step_path(7), class: "btn btn-secondary" %>
            <%= link_to "Save as Draft", wizard_summary_path, class: "btn btn-outline" %>
            <%= form.submit "Complete Configuration", class: "btn btn-success" %>
          </div>
        </div>
      </section>
    <% end %>
  </div>
</section>
<style>
  .wizard-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }

  .review-section {
    margin-bottom: 40px;
  }

