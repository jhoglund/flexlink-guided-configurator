<section class="max-w-6xl mx-auto p-5">
  <%= render 'wizard/steps/wizard_header' %>

  <div class="wizard-content">
    <%= form_with url: wizard_update_step_path(1), method: :patch, local: true, class: "wizard-form" do |form| %>
      <div class="space-y-8 mb-10">
        <% @system_types.each do |category, types| %>
          <section class="system-category">
            <h3 class="text-xl font-semibold text-gray-900 mb-5 pb-3 border-b-2 border-gray-200"><%= category.humanize %></h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
              <% types.each do |system_type| %>
                <div class="system-type-card relative">
                  <input type="radio" 
                         name="wizard_step[system_type]" 
                         id="system_type_<%= system_type.parameterize %>"
                         value="<%= system_type %>"
                         class="hidden"
                         <%= 'checked' if @step_data&.dig('system_type') == system_type %>>
                  <label for="system_type_<%= system_type.parameterize %>" 
                         class="block cursor-pointer border-2 border-gray-200 rounded-xl p-5 transition-all duration-300 bg-white hover:border-red-300 hover:shadow-md">
                    <div class="card-content">
                      <h4 class="text-lg font-semibold text-gray-900 mb-3"><%= system_type.humanize %></h4>
                      <p class="description text-gray-600 mb-4 leading-relaxed">
                        <%= get_system_type_description(system_type) %>
                      </p>
                      <div class="features space-y-2">
                        <span class="feature text-green-600 text-sm font-medium block">✓ Modular design</span>
                        <span class="feature text-green-600 text-sm font-medium block">✓ Easy maintenance</span>
                        <span class="feature text-green-600 text-sm font-medium block">✓ Customizable</span>
                      </div>
                    </div>
                  </label>
                </div>
              <% end %>
            </div>
          </section>
        <% end %>
      </div>

      <div class="text-center pt-8 border-t border-gray-200">
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <%= link_to "Cancel", root_path, class: "px-6 py-3 bg-gray-200 text-gray-700 rounded-lg font-medium hover:bg-gray-300 transition-colors" %>
          <%= form.submit "Continue to Step 2", class: "px-6 py-3 bg-red-600 text-white rounded-lg font-medium hover:bg-red-700 hover:transform hover:-translate-y-0.5 transition-all duration-200 shadow-md" %>
        </div>
      </div>
    <% end %>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Add smooth transitions for card selection
  const cards = document.querySelectorAll('.system-type-card label');
  const inputs = document.querySelectorAll('.system-type-card input[type="radio"]');
  
  inputs.forEach(input => {
    input.addEventListener('change', function() {
      // Remove active styling from all cards
      cards.forEach(card => {
        card.classList.remove('border-red-500', 'shadow-lg', 'transform', '-translate-y-1');
        card.classList.add('border-gray-200');
      });
      
      // Add active styling to selected card
      if (this.checked) {
        const label = this.nextElementSibling;
        label.classList.remove('border-gray-200');
        label.classList.add('border-red-500', 'shadow-lg', 'transform', '-translate-y-1');
      }
    });
  });
  
  // Initialize active state for pre-selected cards
  inputs.forEach(input => {
    if (input.checked) {
      const label = input.nextElementSibling;
      label.classList.remove('border-gray-200');
      label.classList.add('border-red-500', 'shadow-lg', 'transform', '-translate-y-1');
    }
  });
});
</script>
 