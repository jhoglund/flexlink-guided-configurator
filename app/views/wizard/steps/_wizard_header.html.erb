<div class="bg-gradient-to-br from-red-600 to-red-700 text-white p-8 rounded-xl mb-8 shadow-lg">
  <div class="flex flex-col lg:flex-row justify-between items-center mb-6">
    <%= link_to root_path, class: "text-red-100 hover:text-white text-sm transition-colors mb-4 lg:mb-0" do %>
      <i class="fas fa-arrow-left mr-2"></i>
      Back to Dashboard
    <% end %>
    <div class="wizard-progress flex-1 max-w-md mx-4">
      <div class="flex justify-between mb-2 text-sm">
        <span class="step-number">Step <%= @step %> of 8</span>
        <span class="progress-percentage"><%= wizard_progress_percentage(@step) %>%</span>
      </div>
      <div class="w-full h-2 bg-red-500 bg-opacity-30 rounded-full overflow-hidden">
        <div class="progress-fill h-full bg-gradient-to-r from-green-400 to-green-500 rounded-full transition-all duration-500" 
             style="width: <%= wizard_progress_percentage(@step) %>%"></div>
      </div>
    </div>
    <%= link_to "Reset Wizard", wizard_reset_path, 
        method: :delete, 
        class: "text-red-100 hover:text-white text-sm transition-colors",
        data: { confirm: "Are you sure you want to reset the wizard? All progress will be lost." } %>
  </div>
  <div class="text-center mb-6">
    <h1 class="text-3xl font-semibold mb-3"><%= wizard_step_title(@step) %></h1>
    <p class="text-red-100 text-lg"><%= wizard_step_description(@step) %></p>
  </div>
  <div class="flex justify-center gap-4">
    <% (1..8).each do |step_num| %>
      <% if step_num < @step %>
        <span class="w-10 h-10 rounded-full bg-green-500 text-white flex items-center justify-center font-semibold text-sm transition-all duration-300 hover:scale-105" 
              title="<%= wizard_step_title(step_num) %>">
          <i class="fas fa-check"></i>
        </span>
      <% elsif step_num == @step %>
        <span class="w-10 h-10 rounded-full bg-white text-red-600 flex items-center justify-center font-semibold text-sm transform scale-110 transition-all duration-300" 
              title="<%= wizard_step_title(step_num) %>">
          <%= step_num %>
        </span>
      <% else %>
        <span class="w-10 h-10 rounded-full bg-red-500 bg-opacity-30 text-red-100 flex items-center justify-center font-semibold text-sm transition-all duration-300 hover:scale-105" 
              title="<%= wizard_step_title(step_num) %>">
          <%= step_num %>
        </span>
      <% end %>
    <% end %>
  </div>
</div>