<% content_for :breadcrumbs do %>
  [
    { text: "Home", url: root_path },
    { text: "Systems" }
  ]
<% end %>

<div class="max-w-7xl mx-auto">
  <!-- Page Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Conveyor Systems</h1>
    <p class="text-lg text-gray-600">Browse all available conveyor system types grouped by category</p>
  </div>
  <!-- Systems by Category -->
  <% if @systems_by_category.any? %>
    <% @systems_by_category.each do |category, systems| %>
      <div class="mb-8">
        <!-- Category Header -->
        <div class="bg-gray-50 border border-gray-200 rounded-t-lg px-6 py-4">
          <h2 class="text-xl font-semibold text-gray-900"><%= category %></h2>
          <p class="text-sm text-gray-600"><%= systems.count %> system<%= 's' unless systems.count == 1 %></p>
        </div>
        <!-- Systems List -->
        <div class="bg-white border border-gray-200 border-t-0 rounded-b-lg p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% systems.each do |system| %>
              <a href="<%= system_path(system) %>" class="block border border-gray-200 rounded-lg p-4 hover:border-flexlink-red hover:shadow-md transition-all duration-200 cursor-pointer">
                <div class="flex items-center space-x-3 mb-3">
                  <div class="w-8 h-8 bg-flexlink-red bg-opacity-10 rounded flex items-center justify-center">
                    <i class="fas fa-cogs text-flexlink-red"></i>
                  </div>
                  <div>
                    <h3 class="font-medium text-gray-900"><%= system.system_name %></h3>
                    <p class="text-sm text-gray-500"><%= system.system_code %></p>
                  </div>
                </div>
                
                <!-- Description -->
                <% if system.description.present? %>
                  <div class="mb-3">
                    <p class="text-sm text-gray-600 leading-relaxed">
                      <%= truncate(system.description, length: 120) %>
                    </p>
                  </div>
                <% end %>
                
                <!-- Key Features -->
                <% if system.advantages.is_a?(Array) && system.advantages.any? %>
                  <div class="mb-3">
                    <h4 class="text-xs font-medium text-gray-700 mb-2">Key Features:</h4>
                    <div class="flex flex-wrap gap-1">
                      <% system.advantages.first(3).each do |advantage| %>
                        <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-blue-50 text-blue-700">
                          <%= advantage %>
                        </span>
                      <% end %>
                      <% if system.advantages.length > 3 %>
                        <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-gray-50 text-gray-600">
                          +<%= system.advantages.length - 3 %> more
                        </span>
                      <% end %>
                    </div>
                  </div>
                <% end %>
                
                <!-- Specifications -->
                <div class="space-y-2 pt-3 border-t border-gray-100">
                  <div class="flex justify-between text-sm">
                    <span class="text-gray-600">Load Capacity:</span>
                    <span class="font-medium text-gray-900"><%= system.load_capacity %></span>
                  </div>
                  <div class="flex justify-between text-sm">
                    <span class="text-gray-600">Speed Range:</span>
                    <span class="font-medium text-gray-900"><%= system.speed_range %></span>
                  </div>
                  <% if system.materials.is_a?(Array) && system.materials.any? %>
                    <div class="flex justify-between text-sm">
                      <span class="text-gray-600">Materials:</span>
                      <span class="font-medium text-gray-900"><%= system.materials.first(2).join(', ') %><%= '...' if system.materials.length > 2 %></span>
                    </div>
                  <% end %>
                </div>
                
                <!-- Click indicator -->
                <div class="mt-3 flex justify-end">
                  <span class="text-xs text-flexlink-red font-medium">
                    Click to view details â†’
                  </span>
                </div>
              </a>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <!-- No Systems Found -->
    <div class="bg-white border border-gray-200 rounded-lg p-8 text-center">
      <h3 class="text-lg font-medium text-gray-900 mb-2">No Systems Found</h3>
      <p class="text-gray-600">No conveyor systems are currently available.</p>
    </div>
  <% end %>
  <!-- Results Summary -->
  <div class="mt-8 bg-white border border-gray-200 rounded-lg p-4">
    <div class="text-sm text-gray-600">
      Showing <span class="font-semibold"><%= @total_count %></span> systems across <span class="font-semibold"><%= @systems_by_category.keys.count %></span> categories
    </div>
  </div>
</div>